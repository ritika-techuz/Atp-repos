{
  "name": "@repo/db",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "files": [
    "dist"
  ],
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.mjs"
    }
  },
  "scripts": {
    "clean": "rimraf dist && rimraf .turbo",
    "prebuild": "rimraf dist",
    "build": "dotenv -e ../../.env -- tsup",
    "dev": "dotenv -e ../../.env -- tsup --watch",
    "lint": "eslint src/",
    "check-types": "tsc --noEmit",
    "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' dotenv -e ../../.env -- jest",
    "make-migration": "NODE_OPTIONS='--loader ts-node/esm --no-warnings' knex migrate:make --knexfile=./src/knexfile.ts",
    "migrate": "NODE_OPTIONS='--loader ts-node/esm --no-warnings' dotenv -e ../../.env -- knex migrate:latest --knexfile=./src/knexfile.ts",
    "make-seed": "NODE_OPTIONS='--loader ts-node/esm --no-warnings' knex seed:make --knexfile=./src/knexfile.ts",
    "run-seed": "NODE_OPTIONS='--loader ts-node/esm --no-warnings' dotenv -e ../../.env -- knex seed:run --knexfile=./src/knexfile.ts",
    "run-specific-seed": "NODE_OPTIONS='--loader ts-node/esm --no-warnings' dotenv -e ../../.env -- knex seed:run --knexfile=./src/knexfile.ts --specific",
    "rollback": "NODE_OPTIONS='--loader ts-node/esm --no-warnings' dotenv -e ../../.env -- knex migrate:rollback --knexfile=./src/knexfile.ts",
    "clear-db": "NODE_OPTIONS='--loader ts-node/esm --no-warnings' dotenv -e ../../.env -- knex migrate:rollback --all --knexfile=./src/knexfile.ts"
  },
  "jest": {
    "preset": "@repo/jest-presets/node"
  },
  "dependencies": {
    "@repo/config": "workspace:*",
    "@repo/logger": "workspace:*",
    "colors": "^1.4.0",
    "knex": "^3.1.0",
    "mysql": "^2.18.1",
    "objection": "^3.1.5"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/jest-presets": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "ts-node": "^10.9.2"
  }
}

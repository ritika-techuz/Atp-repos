{
  "name": "@repo/file-service",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "files": [
    "dist"
  ],
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.mjs"
    }
  },
  "scripts": {
    "clean": "rimraf dist && rimraf .turbo",
    "prebuild": "rimraf dist",
    "build": "dotenv -e ../../.env -- tsup && cp -r src/pdf/templates dist/templates",
    "dev": "dotenv -e ../../.env -- tsup --watch",
    "lint": "eslint src/",
    "check-types": "tsc --noEmit",
    "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' dotenv -e ../../.env -- jest"
  },
  "jest": {
    "preset": "@repo/jest-presets/node"
  },
  "dependencies": {
    "@repo/config": "workspace:*",
    "@repo/logger": "workspace:*",
    "@repo/response-handler": "workspace:*",
    "ejs": "^3.1.10",
    "json-2-csv": "^5.5.9",
    "puppeteer": "^24.9.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/jest-presets": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/ejs": "^3.1.5"
  }
}
